<h1> create an article </h1> 

<% if @article.errors.any? %>
    <h2> The errors are below </h2>
    <ul>
        <%= @article.errors.full_messages.each do |msg| %>
        <li> <% msg %> </li>
    </ul> 

    <% end %>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :description %> <br/>
    <%= f.text_field :description %>
    </p>

    <%= f.submit %>




<% end %>